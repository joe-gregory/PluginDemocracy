<MudCard Elevation="25" Outlined="true" Class="ma-1">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar>
                @if (!string.IsNullOrEmpty(PostCommentDto?.Author?.ProfilePicture))
                {
                    <MudImage Src="@PostCommentDto.Author.ProfilePicture" />
                }
                else
                {
                    @PostCommentDto?.Author?.Initials
                }
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText>@PostCommentDto?.Comment</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            @PostCommentDto?.PublishedDate
            @if (AppState?.User?.Equals(PostCommentDto?.Author) ?? false)
            {
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="DeleteComment" />
            }
        </CardHeaderActions>
    </MudCardHeader>
</MudCard>

