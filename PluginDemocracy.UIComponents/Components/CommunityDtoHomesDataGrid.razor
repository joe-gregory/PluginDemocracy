@inject BaseAppState AppState

<MudDataGrid T="HomeDto" Items="this.Community?.Homes" Bordered="true" Dense="true" ReadOnly="false" EditMode="DataGridEditMode.Cell">
    <Columns>
        <PropertyColumn Property = "home => home.Number" Title="@AppState.Translate(ResourceKeys.Number)" Required="true"/>
        <PropertyColumn Property = "home => home.InternalAddress" Title="@AppState.Translate(ResourceKeys.InternalAddress)" Required="false"/>
        <TemplateColumn CellClass="d-flex justify-end" IsEditable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => DeleteHome(context.Item))" aria-label="delete" Class="center"/>
            </CellTemplate>
        </TemplateColumn>
    </Columns>

</MudDataGrid>