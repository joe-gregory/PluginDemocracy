<MudAvatar Size="Size" @onclick="() => NavigateToProfile(User?.Id)">
    @if (User != null)
    {
        if (!string.IsNullOrEmpty(User.ProfilePicture))
        {
            <MudImage Src=@User.ProfilePicture />
        }
        else
        {
           @User.Initials
        }
    }
    else
    {
        <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" />
    }
</MudAvatar>