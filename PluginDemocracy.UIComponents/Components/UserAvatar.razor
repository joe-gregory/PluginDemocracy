<MudAvatar Size="Size" @onclick="NavigateToProfile">
    @if (User != null)
    {
        if (!string.IsNullOrEmpty(User.ProfilePicture))
        {
            <MudImage Src=@User.ProfilePicture />
        }
        else
        {
            @User.Initials
        }
    }
    else if(Community != null)
    {
        if (!string.IsNullOrEmpty(Community.ProfilePicture))
        {
            <MudImage Src="@Community.ProfilePicture" />
        }
        else
        {
            @Community.Initials
        }
    }
    else
    {
        <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" />
    }
</MudAvatar>